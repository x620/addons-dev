<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_pos_product_discount_total_config_form" model="ir.ui.view">
        <field name="name">pos.discount.total.pin.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="discount_total_group_id"/>
            </field>
        </field>
    </record>

    <record id="view_pos_product_total_discount_order_form" model="ir.ui.view">
        <field name="name">pos.product.total.discount.pin.order</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <field name="fiscal_position_id" position="after">
                <field name="discount_total_user_id"/>
            </field>
        </field>
    </record>

</data>
</openerp>